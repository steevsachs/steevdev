{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~test-utils/*": ["test-utils/*"]
    },
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["../**/__tests__/*"],
  "files": ["global.d.ts", "node_modules/jest-dom/extend-expect.d.ts"],
  "include": ["src"]
}
